<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.cylinder.www.ui.ConfigurationFragment">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:background="#FF9e9e9e" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/signal_server_address"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="信号服务器地址："
                android:textColorHint="#000000"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="请输入IP"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="请输入端口"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:background="#FF9e9e9e" />

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/video_server_address"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="视频服务器地址："
                android:textColorHint="#000000"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="请输入IP"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="请输入端口"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:background="#FF9e9e9e" />

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/video_bit_rate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="采集视频码率："
                android:textColorHint="#000000"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="请输入码率"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:background="#FF9e9e9e" />

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/video_size"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="采集视频大小:"
                android:textColorHint="#000000"
                android:textSize="34dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="宽"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="高"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/tablet_number"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="平板编号:"
                android:textColorHint="#000000"
                android:textSize="34dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:editable="false"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />


        </TableRow>

        <TableRow
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

            <TextView
                android:id="@+id/pairedZXDC"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="start|center_vertical"
                android:text="配对浆机:"
                android:textColorHint="#000000"
                android:textSize="34dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:editable="false"
                android:textColorHint="#9e9e9e"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />

        <View
            android:layout_width="48dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/quitbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃" />

    </LinearLayout>

</LinearLayout>
